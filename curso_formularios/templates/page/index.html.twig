{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}
    <h1 class="d-flex align-items-center justify-content-between">
    Ejemplo home! âœ…
    <a href="{{ path('post_create') }}" class="btn btn-dark btn-sm">Crear post</a>    
    </h1>
    <table class="table table-striped table-bordered table-hover">
    <tbody>
    {% for post in posts %}
    <tr>
        <td>{{ post.category.name }}</td>
        <td>{{ post.title }}</td>
        <td>{{ post.body }}</td>
        <td>
            <a href="{{ path('post_edit',{id: post.id}) }}">Editar</a>
        </td>
    </tr>
    
    {% endfor %}
    </tbody>
    
    
    </table>
{% endblock %}
